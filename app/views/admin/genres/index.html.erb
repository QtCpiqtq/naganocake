<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: genres_path, method: :post do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <tr>
    <th>ジャンル</th>
  </tr>
  
  <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
        <%= link_to "編集する", edit_genre_path(genre.id) %>
      </td>
    </tr>
  <% end %>
</table>