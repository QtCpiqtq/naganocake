<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <table>
    <tr>
      <th><%= f.label :image, "商品画像" %></th>
      <td>
        <%= f.file_field :image, accept: "image/*" %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :name, "商品名" %></th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :introduction, "商品説明" %></th>
      <td>
        <%= f.text_area :introduction %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :ganre_id, "ジャンル" %></th>
      <td>
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :price, "税抜価格" %></th>
      <td>
        <%= f.number_field :price %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :is_active, "販売ステータス" %></th>
      <td>
        <%= f.radio_button :is_active, "販売中", checked: true %>販売中　<%= f.radio_button :is_active, "販売停止中" %>販売停止中
      </td>
    </tr>
  </table>
  <%= f.submit "変更を保存" %>
<% end %>