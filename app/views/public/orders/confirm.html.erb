<h4>注文情報確認</h4>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込み)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.image.variant(resize_to_fill: [100, 100]).processed %>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.with_tax_price %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.subtotal %>
      </td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @shipping_cost %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @shipping_fee + @total %></td>
  </tr>
</table>

<h4>支払方法</h4>
<%= @payment_method %>

<h4>お届け先</h4>
<%= "〒" + @postal_code + " " + @address %>
<%= @name %>

<%= form_with model: @orders, url: orders_path, method: :post do |f| %>
  <%= f.hidden_field :postal_code, :value => @postal_code %>
  <%= f.hidden_field :address, :value => @address %>
  <%= f.hidden_field :name, :value => @name %>
  <%= f.hidden_field :payment_method, :value => @payment_method %>
  <%= f.hidden_field :price, :value => @total %>
  <%= f.hidden_field :shipping_fee, :value => @shipping_fee %>
  <%= f.submit "注文を確定する" %>
<% end %>