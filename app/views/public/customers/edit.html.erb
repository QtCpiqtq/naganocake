<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customer_infomation_path, method: :patch do |f| %>
  <table>
  <tr>
    <td><%= f.label :last_name, "氏名" %></td>
    <td>
      <%= f.text_field :last_name, autofocus: true %> <%= f.text_field :first_name %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :last_name_kana, "フリガナ" %></td>
    <td>
      <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :postal_code, "郵便番号" %></td>
    <td>
      <%= f.text_field :postal_code %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :address, "住所" %></td>
    <td>
      <%= f.text_field :address %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :telephone_number, "電話番号" %></td>
    <td>
      <%= f.text_field :telephone_number %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :email, "メールアドレス" %></td>
    <td>
      <%= f.email_field :email %>
    </td>
  </tr>
</table>
  <%= f.submit "編集内容を保存" %>
  <%= link_to "退会する", customers_unsubscribe_path %>
<% end %>