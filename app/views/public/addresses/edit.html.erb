<h2>配送先編集</h2>

<%= form_with model: @address, url: address_path, method: :patch do |f| %>
  <table>
    <tr>
      <td>
        <%= f.label :postal_code, "郵便番号(ハイフンなし)"%>
      </td>
      <td>
        <%= f.text_field :postal_code %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所" %>
      </td>
      <td>
        <%= f.text_field :address %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :name, "宛名" %>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
      <td>
        <%= f.submit "変更内容を保存" %>
      </td>
    </tr>
  </table>
<% end %>