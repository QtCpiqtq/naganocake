<div class="conteiner">
  <div class="ml-5">
    <%= link_to "LOGO", root_path %>
    
    <% if customer_signed_in? %>
      <%= link_to "マイページ", mypage_path %>
      <%= link_to "商品一覧", items_path %>
      <%= link_to "カート", cart_items_path %>
      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
    
      <%= form_with url: items_path, method: :get do |f| %>
        <%= f.text_field :item_name %>
        <%= f.submit "検索" %>
      <% end %>
    
    <% elsif admin_signed_in? %>
      <%= link_to "商品一覧", admin_items_path %>
      <%= link_to "会員一覧", customers_path %>
      <%= link_to "注文履歴一覧", about_path %>
      <%= link_to "ジャンル一覧", genres_path %>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    
      <%= form_with url: admin_items_path, method: :get do |f| %>
        <%= f.text_field :item_name %>
        <%= f.submit "検索" %>
      <% end %>
    
    <% else %>
      <%= link_to "商品一覧", items_path %>
      <%= link_to "新規登録", new_customer_registration_path %>
      <%= link_to "ログイン", new_customer_session_path %>
    
      <%= form_with url: items_path, method: :get do |f| %>
        <%= f.text_field :item_name %>
        <%= f.submit "検索" %>
      <% end %>
    <% end %>
  </div>
</div>
